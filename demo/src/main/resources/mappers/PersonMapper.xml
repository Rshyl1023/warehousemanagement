<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PersonMapper">

    <select id="findAll" resultType="com.example.demo.pojo.Person">
        SELECT * FROM person
    </select>

    <select id="findById" parameterType="String" resultType="com.example.demo.pojo.Person">
        SELECT * FROM person WHERE code = #{code}
    </select>

    <insert id="insert" parameterType="com.example.demo.pojo.Person">
        INSERT INTO person (
            code,
            name,
            gender,
            birthday,
            id_card,
            native_place,
            address,
            phone,
            password_hash,
            is_active,
            other
        ) VALUES (
                     #{code},
                     #{name},
                     #{gender},
                     #{birthday},
                     #{idCard},
                     #{nativePlace},
                     #{address},
                     #{phone},
                     #{passwordHash},
                     #{isActive},
                     #{other}
                 )
    </insert>

    <delete id="delete" parameterType="String">
        DELETE FROM person WHERE code = #{code}
    </delete>

</mapper>